<div class="ui card">
    <div class="content">
        <div class="header">你的话题</div>
        <div class="ui divider"></div>
        <div class="ui link list" id="user_card_list">
            <% if (userTopics) { %>
            <% userTopics.forEach(function (topic) { %>
            <a class='item' href="/topic/<%= topic.id %>"><%= topic.title %></a>
            <% })} else { %>
            <p>您还没有任何话题</p>
            <% } %>
        </div>
    </div>
    <a class=" ui green attached button " href="/create">发表话题</a>
    <form id="sentToServer">
        <input type="text" name="name"/>
        <input type="button" id="enter" value="提交">
    </form>

    <script type="text/javascript">
        $('#enter').click(function () {
            console.log("提交post");
            $.ajax({
                url: "/api/test/",
                data: $('#sentToServer').serialize(),
                type: "POST",
                cache:false,
                dataType: 'text',
                success: function (msg) {
                    alert(msg);
                },
                error: function () {
                    alert('异常');
                }
            })
        });
    </script>

</div>
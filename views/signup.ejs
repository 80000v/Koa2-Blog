<% include header %>

<style type="text/css">
    body {
        background-color: #DADADA;
    }

    body > .grid {
        height: 100%;
    }

    .image {
        margin-top: -100px;
    }

    .column {
        max-width: 450px;
    }
</style>
<script>
    $(document)
            .ready(function () {
                $('.ui.form')
                        .form({
                            fields: {
                                name: {
                                    identifier: 'name',
                                    rules: [
                                        {
                                            type: 'empty',
                                            prompt: '请输入用户名'
                                        }
                                    ]
                                },
                                gender: {
                                    identifier: 'gender',
                                    rules: [
                                        {
                                            type: 'empty',
                                            prompt: '请选择性别'
                                        }
                                    ]
                                },
                                password: {
                                    identifier: 'password',
                                    rules: [
                                        {
                                            type: 'empty',
                                            prompt: 'Please enter your password'
                                        },
                                        {
                                            type: 'length[5]',
                                            prompt: 'Your password must be at least 6 characters'
                                        }
                                    ]
                                },
                                re_password: {
                                    identifier: 're_password',
                                    rules: [
                                        {
                                            type: 'empty',
                                            prompt: 'Please enter your password'
                                        },
                                        {
                                            type: 'length[5]',
                                            prompt: 'Your password must be at least 6 characters'
                                        },
                                        {
                                            type: 'match[password]',
                                            prompt: '两次密码不一致'
                                        }
                                    ]
                                },
                                email: {
                                    identifier: 'email',
                                    rules: [
                                        {
                                            type: 'empty',
                                            prompt: 'Please enter your e-mail'
                                        },
                                        {
                                            type: 'email',
                                            prompt: 'Please enter a valid e-mail'
                                        }
                                    ]
                                },
                                signature: {
                                    identifier: 'signature',
                                    rules: [
                                        {
                                            type: 'maxLength[50]',
                                            prompt: '签名过长'
                                        }
                                    ]
                                }
                            }
                        })
                ;
            })
    ;
</script>
</head>
<body>

<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui teal image header">
            <img src="/statics/images/logo.png" class="image">
            <div class="content">
                注册新用户
            </div>
        </h2>
        <form class="ui large form" method="post" action="/signup">
            <div class="ui form left aligned segment">
                <div class="required two fields">
                    <div class="field">
                        <label>用户名</label>
                        <input placeholder="用户名" type="text" name="name">
                    </div>
                    <div class="field">
                        <label>性别</label>
                        <select class="ui dropdown" name="gender">
                            <option value="">请选择性别</option>
                            <option value="男">男</option>
                            <option value="女">女</option>
                        </select>
                    </div>
                </div>
                <div class="two required fields">
                    <div class="field">
                        <label>密码</label>
                        <input placeholder="Password" type="password" name="password">
                    </div>
                    <div class="field">
                        <label>重复密码</label>
                        <input placeholder="Confirm Password" type="password" name="re_password">
                    </div>
                </div>
                <div class="required field">
                    <label>邮箱</label>
                    <input placeholder="E-mail address" type="text" name="email">
                </div>
                <div class="field">
                    <label>签名</label>
                    <input name="signature" placeholder="50字以内" type="text">
                </div>

                <input type="submit" class="ui button large teal fluid" value="注册">
            </div>
            <div class="ui error message">
            </div>
        </form>
        <% if(flash && flash.message) { %>
        <div class="ui error message">
            <p><%= flash.message %></p>
        </div>
        <% } %>
    </div>
</div>

<script type="text/javascript">
    $('.ui.dropdown').dropdown();
</script>

<% include footer %>